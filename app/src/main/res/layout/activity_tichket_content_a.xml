<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/btn_fb_plus"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/size_16">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_parking_ticket" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_16"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="0.6"
            android:background="@android:color/white" />
    </LinearLayout>

    <TextView
        android:id="@+id/check_out_txt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_16"
        android:drawableLeft="@drawable/ic_access_time_white_18dp"
        android:drawablePadding="@dimen/size_8"
        android:drawableStart="@drawable/ic_access_time_white_18dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:text="14/12/2016"
        android:textColor="@android:color/white"
        android:textSize="@dimen/font_13" />

    <TextView
        android:id="@+id/check_out_txt_verhicle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_8"
        android:ellipsize="end"
        android:gravity="center"
        android:text="KIA K3: 29A9-999999"
        android:textColor="@android:color/white"
        android:textSize="@dimen/font_13" />
</LinearLayout>