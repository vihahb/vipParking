<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_150"
    android:background="@android:color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/scanqr_txt_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_36"
            android:gravity="center"
            android:text="@string/checking"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/btn_fb_plus" />

        <TextView
            android:id="@+id/scanqr.txt_gift_code"
            style="@style/Scanner_TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/scanqr.layout_gift_code"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="@dimen/size_24">

        <Spinner
            android:id="@+id/scanqr_sp_verhicle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_40"
            android:background="@drawable/edittext_add_parking" />

        <EditText
            android:id="@+id/scanqr.edt_gift_code"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_36"
            android:layout_marginTop="@dimen/size_16"
            android:background="@drawable/custom_textview_add_parking"
            android:hint="@string/input_gift_code"
            android:inputType="number"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/colorPrimary" />
    </LinearLayout>
</FrameLayout>