<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/size_1"
    android:background="@android:color/white"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/size_16"
    android:paddingRight="@dimen/size_16">

    <LinearLayout
        android:layout_width="@dimen/size_40"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img_default"
            android:layout_width="@dimen/size_10"
            android:layout_height="@dimen/size_10"
            android:layout_gravity="center"
            android:src="@drawable/ic_action_green_dot" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_16"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingBottom="@dimen/size_8"
        android:paddingEnd="@dimen/size_16"
        android:paddingRight="@dimen/size_16"
        android:paddingTop="@dimen/size_8">

        <TextView
            android:id="@+id/item.txt_verhicle_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Ô tô của mình"
            android:textSize="@dimen/font_13"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item.txt_verhicle_made_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_4"
            android:text="Honda"
            android:textSize="@dimen/font_13" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </LinearLayout>

    <TextView
        android:id="@+id/item.txt_verhicle_car_number_plate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_16"
        android:layout_marginStart="@dimen/size_16"
        android:text="3025-3260"
        android:textSize="@dimen/font_13" />

</LinearLayout>