<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/size_1"
    android:background="@android:color/white"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="@dimen/size_72"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/size_2"
        android:gravity="center_horizontal">

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary" />

        <FrameLayout
            android:layout_width="@dimen/size_2"
            android:layout_height="match_parent"
            android:layout_marginLeft="-2dp"
            tool:ignore="UnusedAttribute">

            <View
                android:id="@+id/set_default"
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/size_8"
                android:layout_marginTop="@dimen/size_8"
                android:background="@color/check_out" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingBottom="@dimen/size_8"
        android:paddingRight="@dimen/size_16"
        android:paddingTop="@dimen/size_8">

        <TextView
            android:id="@+id/item.txt_verhicle_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Ô tô của mình"
            android:textSize="@dimen/font_13"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item.txt_verhicle_made_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_4"
            android:text="Honda"
            android:textSize="@dimen/font_13" />
    </LinearLayout>

    <TextView
        android:id="@+id/item.txt_verhicle_car_number_plate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_16"
        android:layout_marginStart="@dimen/size_16"
        android:paddingBottom="@dimen/size_8"
        android:paddingLeft="@dimen/size_16"
        android:paddingRight="@dimen/size_16"
        android:paddingTop="@dimen/size_8"
        android:text="3025-3260"
        android:textSize="@dimen/font_13" />

</LinearLayout>