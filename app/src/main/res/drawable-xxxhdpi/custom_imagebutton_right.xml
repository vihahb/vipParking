<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@android:color/white" />
            <stroke android:width="@dimen/size_2" android:color="@android:color/white" />
            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="@dimen/size_6" android:topLeftRadius="0dp" android:topRightRadius="@dimen/size_6" />
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@color/colorPrimary" />
            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="@dimen/size_6" android:topLeftRadius="0dp" android:topRightRadius="@dimen/size_6" />
            <stroke android:width="@dimen/size_2" android:color="@android:color/white" />
        </shape>
    </item>
</selector>