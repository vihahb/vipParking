<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@android:color/white" />
            <stroke android:width="@dimen/size_2" android:color="@android:color/white" />
            <corners android:bottomLeftRadius="@dimen/size_6" android:bottomRightRadius="0dp" android:topLeftRadius="@dimen/size_6" android:topRightRadius="0dp" />
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@color/colorPrimary" />
            <stroke android:width="@dimen/size_2" android:color="@android:color/white" />
            <corners android:bottomLeftRadius="@dimen/size_6" android:bottomRightRadius="0dp" android:topLeftRadius="@dimen/size_6" android:topRightRadius="0dp" />
        </shape>
    </item>
</selector>